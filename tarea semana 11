def bubble_sort(fila):
    n = len(fila)
    for i in range(n-1):
        for j in range(n-1-i):
            if fila[j] > fila[j+1]:
                fila[j], fila[j+1] = fila[j+1], fila[j]
    return fila

matriz = [
    [34, 12, 25],
    [89, 56, 47],
    [90, 11, 67]
]

print(" Matriz original:")
for fila in matriz:
    print(fila)

fila_a_ordenar = 1
matriz[fila_a_ordenar] = bubble_sort(matriz[fila_a_ordenar])

print("\n Matriz con la fila 1 ordenada:")
